<Window x:Class="Ellipse_in_Square.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ellipse_in_Square"
        mc:Ignorable="d"
        Title="Ellipse in Square" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Name="label" Content="Рассогласование: -1" Width="200" Height="30" FontSize="14" FontFamily="Georgia" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="265,10,323,10"/>
        <Canvas x:Name="canvas" Grid.Row="0" MinWidth="790" MinHeight="369" ClipToBounds="True" >
            <Ellipse Name="el" Fill="White"/>
            <Ellipse Name="elstroke" Stroke="Black" StrokeThickness="3"/>
            <Path Stroke="Red">
                <Path.Data>
                    <RectangleGeometry x:Name="square"/>
                </Path.Data>
            </Path>
        </Canvas>
    </Grid>
</Window>
